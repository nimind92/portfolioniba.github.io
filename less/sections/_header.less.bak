.header {
position: relative;
    display: table;
    width: 100%;

    height: 390px;
    background-color: #0c5995;
    background-image: url(../img/bg/bg-10.jpg);
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;

    color: rgb(255, 255, 255);
    font-family: "Noto Sans";
    text-align: center;

    position: relative;

    @media(min-width: 768px) {
        height: 560px;
    }

    @media(min-width: 1200px) {
        height: 800px;
    }
}

.header__inner {
    display: table-cell;
    text-align: center;
    vertical-align: middle;

    padding-bottom: 60px;
}

.header__centered--content {
    display: inline-block;
    margin-top: -10px;

    @media(min-width: 768px) {
        margin-top: 0px;
    }

    @media(min-width: 1200px) {
        margin-top: -162px;
    }
}

.header__title {
    font-size: 26px;

    font-weight: 700;
    text-shadow: 0px 0px 40px rgba(72, 119, 159, 1);
    margin: 0 0 20px;

    @media(min-width: 768px) {
        font-size: 42px;
    }

    @media(min-width: 1200px) {
        font-size: 56px;
    }
}

.header__subtitle {
    margin: 0;
    font-size: 18px;
    font-weight: 700;
    text-shadow: 0px 0px 40px rgba(72, 119, 159, 1);

    @media(min-width: 768px) {
        font-size: 20px;
    }

    @media(min-width: 1200px) {
        font-size: 26px;
    }
}


